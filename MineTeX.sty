% --- A LaTeX .sty file for showing Minecraft items, recipes, etc.

\ProvidesPackage{MineTeX}

% - Packages

\RequirePackage{tikz}
\RequirePackage{keyval}
\RequirePackage{overpic}

\usepackage[export]{adjustbox}

% - Items

\newcommand{\minecraftitemwidth}{0.07\linewidth}

\newcommand{\minecraftitem}[2][]{
  \includegraphics[valign=c, width=\minecraftitemwidth]{#1}
%  \begin{overpic}[width=\minecraftitemwidth]{#1}
%    \put(70, 0){{\bf\small #2}}
%  \end{overpic}
}

\newcommand{\minecraftitemwithtext}[2][]{
  \begin{overpic}[width=\minecraftitemwidth]{#1}
    \put(0, -20){{\bf\small #2}}
  \end{overpic}
}

% - Minecraft Crafting Table Recipe Command

\define@key{mcrecipe}{a}{\def\mcrecipe@a{#1}}
\define@key{mcrecipe}{b}{\def\mcrecipe@b{#1}}
\define@key{mcrecipe}{c}{\def\mcrecipe@c{#1}}
\define@key{mcrecipe}{d}{\def\mcrecipe@d{#1}}
\define@key{mcrecipe}{e}{\def\mcrecipe@e{#1}}
\define@key{mcrecipe}{f}{\def\mcrecipe@f{#1}}
\define@key{mcrecipe}{g}{\def\mcrecipe@g{#1}}
\define@key{mcrecipe}{h}{\def\mcrecipe@h{#1}}
\define@key{mcrecipe}{i}{\def\mcrecipe@i{#1}}

\setkeys{mcrecipe}{a=\space, b=\space, c=\space, d=\space, e=\space, f=\space, g=\space, h=\space. i=\space}%
\newcommand{\mcrecipe}[2][]{%
  \begingroup%
  \setkeys{mcrecipe}{#1}
  \begin{tikzpicture}
    \node (base) {\includegraphics*[width=\textwidth]{assets/images/recipe/recipebase.png}};
    \node at (-4.86, 1.5) (1) {\mcrecipe@a};
    \node at (-3.1, 1.5) (2) {\mcrecipe@b};
    \node at (-1.3, 1.5) (3) {\mcrecipe@c};

    \node at (-4.86, -0.3) (4) {\mcrecipe@d};
    \node at (-3.1, -0.3) (5) {\mcrecipe@e};
    \node at (-1.3, -0.3) (6) {\mcrecipe@f};

    \node at (-4.86, -2.1) (7) {\mcrecipe@g};
    \node at (-3.1, -2.1) (8) {\mcrecipe@h};
    \node at (-1.3, -2.1) (9) {\mcrecipe@i};

    \node at (4.5, -0.3) (10) {\scalebox{1.4}{#2}};
  \end{tikzpicture}
  \endgroup
}